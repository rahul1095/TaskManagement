<!DOCTYPE html>
<html>
  <head>
    <title>UserAuth</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    
    <% flash.each do |flash, message| %>
  <div class = "alert alert-success" id ="flash2" <%= flash %>>
    <%= message %>
  </div>
 

<% end %>
  <nav class="navbar navbar-default navbar-static-top" style="background-color: #d5cdc3;">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div id="navbar" class="navbar-collapse collapse" aria-expanded="false" style="height:1px;">
          <ul class="nav navbar-nav">
          <li><%= link_to "Task Management", root_path ,class: "navbar-brand" %></li>
          <% if user_signed_in? %>
           <% if current_user.admin.present? %>
            <li><a href="/users/sign_up">Sign up</a></li>
            <%end%>
            <%end%>

            <!-- <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="caret"></span></a>
              <ul class="dropdown-menu">
                
              </ul>
            </li> -->
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <% if current_user.admin.present?%>
            <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
            <li><%= link_to "New Task", new_task_path%></li>
            <li><%= link_to "New Project", new_project_path%></li>
           <%else%>
           <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li> 
            <%end%>
            <% else %>

            <li><%#= link_to 'Login', login_page%></li>
            <li><a href="/users/sign_in">Log in</a></li>
            <% end%>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
<br>
    <%= yield %>
    <br><br><br>
